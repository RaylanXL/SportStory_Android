<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_chat_item"
    android:layout_width="match_parent"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_chat_img_left_avatar"
        android:layout_width="40dp"
        android:src="@mipmap/ic_launcher"
        android:layout_height="40dp" />

    <ImageView
        android:id="@+id/img_chat_img_left_imageview"
        android:layout_toRightOf="@id/img_chat_img_left_avatar"
        android:layout_toEndOf="@id/img_chat_img_left_avatar"
        android:layout_marginLeft="5dp"
        android:layout_width="90dp"
        android:layout_height="120dp" />

</RelativeLayout>
