<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_chat_item"
    android:layout_width="match_parent"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_chat_text_right_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:paddingBottom="50dp"
        android:paddingTop="30dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:text="1111111111111111111111111111111111111111111111111111111111111"
        android:layout_marginRight="45dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_chat_text_right_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/tv_chat_text_right_text"
        android:layout_alignBottom="@id/tv_chat_text_right_text"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/ic_launcher" />

</RelativeLayout>
