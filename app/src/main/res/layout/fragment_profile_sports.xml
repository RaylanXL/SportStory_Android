<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="cn.sportstory.android.profile.view.ProfileSportsFragment">

    <TextView
        android:text="@string/click_to_change_sports_level"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/baolingqiu_free"
            android:id="@+id/img_profile_sports_img1"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <RatingBar
            android:id="@+id/rating_profile_sports_rate1"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:stepSize="1"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="3"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_profile_sports_img2"
            android:src="@mipmap/pingpong_free"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <RatingBar
            android:id="@+id/rating_profile_sports_rate2"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:stepSize="1"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="3"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_profile_sports_img3"
            android:src="@mipmap/juzhong_free"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <RatingBar
            android:id="@+id/rating_profile_sports_rate3"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:stepSize="1"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="3"/>
    </LinearLayout>
</LinearLayout>
