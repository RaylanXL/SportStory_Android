<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingRight="25dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_timeline_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22/2月"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:textSize="17sp"/>

    <ImageView
        android:id="@+id/img_timeline_item_pic"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/tv_timeline_item_date"
        android:layout_toEndOf="@id/tv_timeline_item_date"
        android:layout_marginTop="15dp"
        android:adjustViewBounds="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:src="@mipmap/ic_launcher"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_timeline_item_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/img_timeline_item_pic"
        android:text="好开心啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
        android:layout_alignStart="@+id/img_timeline_item_pic"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_alignLeft="@id/img_timeline_item_pic"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/tv_timeline_item_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/like"
            android:layout_width="18dp"
            android:layout_height="18dp" />
        <TextView
            android:layout_marginLeft="3dp"
            android:id="@+id/tv_timeline_item_like_count"
            android:layout_width="wrap_content"
            android:text="0"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/comment"
            android:layout_marginLeft="10dp"
            android:layout_width="18dp"
            android:layout_height="18dp" />
        <TextView
            android:text="0"
            android:layout_marginLeft="3dp"
            android:id="@+id/tv_timeline_item_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>
